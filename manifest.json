{
    "manifest_version": 2,
    "name": "Dance Monkey",
    "version": "0.1",
    "description": "helps you to follow dance moves by mirroring the currently-playing video on youtube",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "browser_action": {
        "default_title": "Dance Monkey",
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "all_frames": true,
            "matches": [
                "*://*.youtube.com/*",
                "*://*.youtube-nocookie.com/*",
                "*://*.youtube-nocookie.com/*"
            ],
            "js": [
                "popup/popup.js"
            ]
        }
    ]
}