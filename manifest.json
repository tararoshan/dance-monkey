{
    "manifest_version": 3,
    "name": "Dance Monkey",
    "version": "0.1",

    "description": "helps you to follow dance moves by mirroring the currently-playing video",

    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "scripting"
    ],

    "action": {
        "default_title": "Dance Monkey",
        "default_popup": "popup/options.html"
      },

    "content_scripts": [{
        "matches": ["*://*.youtube.com/*", "*://*.duckduckgo.com/*", 
            "*://*.youtube-nocookie.com/*", "*://*.youtube-nocookie.com/*"],
        "all_frames": true,
        "js": ["popup/options.js"]
    }]
}