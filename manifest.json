{
    "manifest_version": 2,
    "name": "Dance Monkey",
    "version": "0.1",

    "description": "helps you to follow dance moves by mirroring the currently-playing video",

    "permissions": [
        "activeTab"
    ],

    "browser_action": {
        "default_title": "Dance Monkey",
        "default_popup": "popup/popup.html"
    },

    "content_scripts": [{
        "matches": ["https://*.youtube.com/*", "https://*.duckduckgo.com/*", "https://*.youtube-nocookie.com/*"],
        "js": ["popup/popup.js", "main.js"],
        "all_frames": true
    }]
}