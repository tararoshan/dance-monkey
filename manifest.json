{
    "manifest_version": 3,
    "name": "Dance Monkey",
    "version": "0.0.3",
    "description": "helps you to follow dance moves by mirroring and looping the currently-playing video on youtube",
    "icons": {
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "dancemonkey@tararoshan.com",
            "strict_min_version": "42.0"
        }
    },      
    "permissions": [
        "scripting",
        "storage",
        "tabs"
    ],
    "action": {
        "default_title": "Dance Monkey",
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [{
        "all_frames": true,
        "matches": [
            "*://*.youtube.com/*",
            "*://*.youtube-nocookie.com/*"
        ],
        "js": [
            "popup/popup.js"
        ]
    }]
}
